<!-- layout.html -->
<!doctype html>
<html lang="en">
<head>
  <title>{{title}}</title>
  <meta http-equiv="content-type" content="text/html; charset=utf-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
  <meta name="description" content="{{description}}">

    <!-- Bootstrap core CSS -->
  <link href="/static/css/bootstrap.min.css" rel="stylesheet">
  <link href="/static/css/typeahead.css" rel="stylesheet">

  <script src="/static/js/jquery-3.4.1.min.js"></script>
  <script src="/static/js/bootstrap.bundle.min.js"></script>
  <script src="/static/js/all.min.js"></script>
  <script src="/static/js/typeahead.bundle.min.js"></script>

  {% include 'style.j2' %}
</head>
<title>capix</title>

<body>
  {% include 'nav.j2' %}

  {# Toast any error messages #}
  {% with messages = get_flashed_messages(with_categories=true) %}
    {% if messages %}
      {% for category, message in messages %}
      <div aria-live="polite" aria-atomic="true" style="position: relative;">
        <div class="toast" style="position: absolute; top: 0; right: 0; z-index:100;" data-autohide="false" role="alert" aria-live="assertive" aria-atomic="true">
          <div class="toast-header bg-danger">
            <i class="fas fa-exclamation-triangle mr-1 text-white"></i>
            <strong class="mr-auto text-white">{{ category }}</strong>
            <button type="button" class="ml-2 mb-1 close" data-dismiss="toast" aria-label="Close">
              <span aria-hidden="true">&times;</span>
            </button>
          </div>
          <div class="toast-body">
            {{ message }}
          </div>
        </div>
      </div>
      {% endfor %}
    {% endif %}
  {% endwith %}
  {# end Toast any error messages #}

  {% block content %}{% endblock %}
  {% include 'footer.j2' %}
</body>
  {% include 'lazyscripts.j2' %}
</html>